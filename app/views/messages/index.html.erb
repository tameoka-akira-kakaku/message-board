<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= sanitize(nl_to_br(message.name)) %></span>
      <%= sanitize(nl_to_br(message.body)) %>
      <br>
    <% end %>
  </div>
</div>
<%= form_for(@message) do |f| %>
<div style="display:inline-flex">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <form class="form-inline">
                        <div class="row margin">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">名前</label>
                                    <%= f.text_area :name, class: "form-control" %>
                                </div>
                            </div>
                                    <br>
                                    <br>
                                    <br>
                                    <br>
                                    <br>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="body">内容</label>
                                    <%= f.text_area :body, class: "form-control" %>
                                </div>
                            </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <br>
                                    <input type="submit" name="commit" value="Create Message" class="btn btn-sm btn-primary" size="100*50">
                                    </input>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
<% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-4">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
        <label for="message_name" class="control-label col-md-2">内容:</label>
    <div class="col-md-4">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
<% end %>