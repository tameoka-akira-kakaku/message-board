<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= sanitize(nl_to_br(message.name)) %></span>
      <%= sanitize(nl_to_br(message.body)) %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label class="col-md-1 control-label" for="message_name">名前:</label>
    <div class="col-md-11">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label class="col-md-1 control-label" for="message_body">内容:</label>
    <div class="col-md-11">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-offset-1 col-md-11">
      <%= f.submit :class => "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
